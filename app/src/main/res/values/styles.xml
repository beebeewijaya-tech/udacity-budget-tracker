<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="TextTitleNormal" parent="TextTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="TextTitleSmall" parent="TextTitle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="TextLight">
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextLabelBudget">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:background">@drawable/bg_label</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <style name="Theme.MyBudget.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>